<Window x:Class="LegalDesktop.Views.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Información del Sistema" Height="330" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">

            <!-- Título centrado -->
            <TextBlock Text="🏛 Secretaría de Informática - Cámara Nacional de Apelaciones en lo Civil 🏛"
                       FontSize="14" FontWeight="Bold" TextAlignment="Center"
                       TextWrapping="Wrap" Margin="0,0,0,10"/>

            <Separator Margin="0,5"/>

            <!-- Versión -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,5" HorizontalAlignment="Left">
                <TextBlock Text="Versión:" FontWeight="Bold" Width="80"/>
                <TextBlock Text="LegalDesktop v0.0.3"/>
            </StackPanel>

            <!-- Tokens -->
            <StackPanel HorizontalAlignment="Left" Margin="0,10,0,0">
                <TextBlock Text="Tokens soportados:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="• ePass2003" FontSize="11" Margin="10,0,0,0"/>
                <TextBlock Text="• StarSign" FontSize="11" Margin="10,0,0,0"/>
                <TextBlock Text="• Otros compatibles con PKCS#11" FontSize="11" Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Botón documentación -->
            <Button Content="📘 Ver documentación"
                    HorizontalAlignment="Left"
                    Margin="0,20,0,10"
                    Foreground="White" Background="#007ACC"
                    Padding="6,2"
                    FontSize="11" Cursor="Hand"
                    BorderThickness="0"
                    Click="DocumentationButton_Click"/>

            <!-- Desarrollador a la derecha -->
            <TextBlock Text="Desarrollado por SPU"
                       FontSize="10" FontStyle="Italic" Foreground="Gray"
                       HorizontalAlignment="Right" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
