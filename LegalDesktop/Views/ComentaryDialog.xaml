<Window x:Class="LegalDesktop.Views.ComentaryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LegalDesktop.Views"
        mc:Ignorable="d"
        Title="ComentaryDialog" Height="200" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Ingrese comentario:" Margin="0,0,0,10"/>
        <TextBox Text="{Binding Comentario}" Height="80" AcceptsReturn="True"/>
        <Button Content="Aceptar" Width="100" Margin="0,10,0,0" HorizontalAlignment="Right" Click="Aceptar_Click"/>
    </StackPanel>
</Window>
